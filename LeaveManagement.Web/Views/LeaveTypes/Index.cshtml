@model IEnumerable<LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i>&nbsp;Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td>
                    <button data-id="@item.Id" class="btn btn-primary allocateBtn" type="button">Allocate Leave</button>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white"><i class="fa-solid fa-circle-info"></i></a> &nbsp;
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="leaveTypeId" name="Id" />
</form>

<form id="allocateForm" asp-action="AllocateLeave">
    <input type="hidden" id="leaveTypeIdAllocate" name="Id" />
</form>

@section Scripts{
    <script>
        $(function() {
            

            $('.deleteBtn').click(function(e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this); //Get the button that triggered this click
                        var id = btn.data("id"); //Get the id value out of that button
                        $('#leaveTypeId').val(id);
                        $('#deleteForm').submit();

                    }
                });
            });
            $('.allocateBtn').click(function(e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to allocate this leave to all employees",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this); //Get the button that triggered this click
                        var id = btn.data("id"); //Get the id value out of that button
                        $('#leaveTypeIdAllocate').val(id);
                        $('#allocateForm').submit();

                    }
                });
            });
        });
    </script>
}
